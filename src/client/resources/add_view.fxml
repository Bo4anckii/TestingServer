        <TextField fx:id="var1TF" layoutY="185.0" promptText="Вариант ответа 1" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="185.0" />
        <TextField fx:id="var2TF" layoutY="225.0" promptText="Вариант ответа 2" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="225.0" />
        <TextField fx:id="var3TF" layoutY="265.0" promptText="Вариант ответа 3" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="265.0" />
        <TextField fx:id="var4TF" layoutY="305.0" promptText="Вариант ответа 4" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="305.0" />
        <Label layoutX="445.0" layoutY="185.0" text="Правильный" AnchorPane.rightAnchor="70.0" />
        <TextField fx:id="correctTF" layoutX="520.0" layoutY="185.0" prefHeight="25.0" prefWidth="50.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="185.0" />
    </AnchorPane>
</AnchorPane>
