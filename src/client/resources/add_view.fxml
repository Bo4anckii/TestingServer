        <Label layoutY="45.0" prefWidth="100.0" text="Кол-во вопросов" />
        <Spinner fx:id="amountSpinner" amountToStepBy="1" layoutX="105.0" layoutY="45.0" prefHeight="25.0" prefWidth="80.0">
